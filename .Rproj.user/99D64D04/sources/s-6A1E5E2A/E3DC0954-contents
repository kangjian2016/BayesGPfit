rm(list=ls(all=TRUE))
library(oro.nifti)
library(neurobase)
Rlibpath = "/Users/jiankang/Dropbox/Umich/People/jiankang/Rlib"
MNI2mm_brain_1 = readnii(file.path(Rlibpath,"MNI152_T1_in_mask_2mm.nii.gz"))
AALmask = readnii(fname=file.path(Rlibpath,"AAL_MNI_2mm.nii"))
Amygdala_L =ifelse(AALmask==4201,1,NA)
overlay(MNI2mm_brain_1,Amygdala_L,z=23:31,col.y="red",plot.type="single",bg="black",useRaster=TRUE)


